@model HomeVM

<div id="HotelsList">
<div class="row" style="--bs-gutter-x:0">
    @foreach (var hotel in Model.HotelList)
    {
        <div class="p-4 col-md-12 col-lg-6">
            <div class="row" style="border-radius:20px; border: 1px solid #ffffff">
                <div class="col-4">
                    <img class="d-block w-100" style="border-radius:20px;" src="@hotel.ImageUrl" alt="First slide">
                </div>
                <div class="col-8">
                    <p class="card-title text-warning" style="font-size:xx-large">@hotel.Name</p>
                    <p class="card-text">
                        @(hotel.Description)
                    </p>
                </div>
                <div class="col-12">
                    <div class="row pb-3 pt-2">
                        <div class="col-4">
                            @if (Model.CheckInDate > DateOnly.FromDateTime(DateTime.Now))
                            {
                                if (hotel.IsAvailable)
                                {
                                    <a href="" class="btn btn-success form-control btn-block">Book</a>
                                }
                                else
                                {
                                    <a href="" class="btn btn-outline-danger disabled form-control btn-block">Sold Out</a>
                                }
                            }

                        </div>
                        <div class="col-4">
                            <span class="">Max Occupancy : @hotel.Occupancy adults </span><br />
                            <span class=" pt-1">Hotel Size : @hotel.Sqft sqft</span><br />
                        </div>
                        <div class="col-4">
                            <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px;">
                                USD
                                <span style="border-bottom:1px solid #ff6a00">
                                    @hotel.Price.ToString("c")
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
</div>